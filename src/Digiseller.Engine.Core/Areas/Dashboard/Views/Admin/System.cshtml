@using Digiseller.Engine.Core.Areas.Dashboard.Models.Settings
@using Digiseller.Engine.Core.Providers
@model MainSettings
@{
    ViewData["Title"] = "Настройка системы";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Digishop <small>@ViewData["Title"]</small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <form asp-controller="Admin" asp-action="System" asp-area="Dashboard" method="post">
                            <div class="col-sm-6 b-r">
                                <div class="form-group">
                                    <label asp-for="ShopName">@Html.DisplayNameFor(m => m.ShopName)</label>
                                    <input type="text" asp-for="ShopName" placeholder="@Html.DisplayNameFor(m => m.ShopName)..." class="form-control" value="@Model.ShopName">
                                    <span asp-validation-for="ShopName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="KeyWords">@Html.DisplayNameFor(m => m.KeyWords)</label>
                                    <textarea type="text" asp-for="KeyWords" placeholder="@Html.DisplayNameFor(m => m.KeyWords)..." class="form-control">@Model.KeyWords</textarea>
                                    <span asp-validation-for="KeyWords" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Description">@Html.DisplayNameFor(m => m.Description)</label>
                                    <input type="text" asp-for="Description" placeholder="@Html.DisplayNameFor(m => m.Description)..." class="form-control" value="@Model.Description">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CountOfGoodsPerPage">@Html.DisplayNameFor(m => m.CountOfGoodsPerPage)</label>
                                    <input type="text" asp-for="CountOfGoodsPerPage" placeholder="@Html.DisplayNameFor(m => m.CountOfGoodsPerPage)..." class="form-control" value="@Model.CountOfGoodsPerPage">
                                    <span asp-validation-for="CountOfGoodsPerPage" class="text-danger"></span>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Сохранить</strong></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



