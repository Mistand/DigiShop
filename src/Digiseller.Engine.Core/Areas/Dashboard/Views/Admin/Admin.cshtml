@using Digiseller.Engine.Core.Areas.Dashboard.Models.Settings
@using Digiseller.Engine.Core.Providers
@model AdminSettings
@{
    ViewData["Title"] = "Настройка доступа администратора";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Digishop <small>@ViewData["Title"]</small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <form asp-controller="Admin" asp-action="Admin" asp-area="Dashboard" method="post">
                            <div class="col-sm-6 b-r">
                                <div class="form-group">
                                    <label asp-for="Login">@Html.DisplayNameFor(m => m.Login)</label>
                                    <input type="text" asp-for="Login" placeholder="@Html.DisplayNameFor(m => m.Login)..." class="form-control" value="@Model.Login">
                                    <span asp-validation-for="Login" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Password">@Html.DisplayNameFor(m => m.Password)</label>
                                    <input type="password" asp-for="Password" placeholder="@Html.DisplayNameFor(m => m.Password)..." class="form-control" value="@Model.Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PasswordCompare">@Html.DisplayNameFor(m => m.PasswordCompare)</label>
                                    <input type="password" asp-for="PasswordCompare" placeholder="@Html.DisplayNameFor(m => m.PasswordCompare)..." class="form-control"  value="@Model.Password">
                                    <span asp-validation-for="PasswordCompare" class="text-danger"></span>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Сохранить</strong></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>