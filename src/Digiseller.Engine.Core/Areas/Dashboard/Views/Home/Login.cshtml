@{
    Layout = null;
    var fail = TempData.ContainsKey("fail") ? TempData["fail"].ToString() : string.Empty;
    var mainSettings = conf.Get<MainSettings>();
}
@using Digiseller.Engine.Core.Areas.Dashboard.Models.Settings
@using Digiseller.Engine.Core.Providers
@model Digiseller.Engine.Core.Areas.Dashboard.Models.LoginModel
@inject IConfProvider conf
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title></title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib_bower/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib_bower/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib_bower/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib_bower/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
</head>

<body class="gray-bg">

<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <h3>@mainSettings.ShopName</h3>
        
        @if (!string.IsNullOrEmpty(fail))
        {
            <div class="alert alert-danger">
                @fail
            </div>
        }

        <form class="m-t" role="form" asp-action="Login" asp-controller="Home" asp-area="Dashboard">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Логин" required="" asp-for="Login">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Пароль" required="" asp-for="Password">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Войти</button>
        </form>
        <p class="m-t"> <small><strong>Copyright</strong> Digishop &copy; 2017</small> </p>
    </div>
</div>
</body>

</html>
